#!/usr/bin/env python3
"""
Image Generator - Universal wrapper script
This script can be called from any directory and will correctly locate the generate.py script.
"""
import sys
import os
from pathlib import Path

# Get the directory where this wrapper script is located
SCRIPT_DIR = Path(__file__).parent.parent.absolute()  # Go up one level to skill directory
GENERATE_SCRIPT = SCRIPT_DIR / "scripts" / "generate.py"

if not GENERATE_SCRIPT.exists():
    print(f"‚ùå Error: Cannot find generate.py at {GENERATE_SCRIPT}")
    sys.exit(1)

# Execute the actual generate script with all arguments
import subprocess
result = subprocess.run(
    [sys.executable, str(GENERATE_SCRIPT)] + sys.argv[1:],
    cwd=SCRIPT_DIR
)

sys.exit(result.returncode)
